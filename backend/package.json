{
  "name": "studiahub-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run kill:offline && dotenv -e .env.dev -- serverless offline --stage dev",
    "deploy": "serverless deploy",
    "remove": "serverless remove",
    "dev:dev": "dotenv -e .env.dev -- serverless offline --stage dev",
    "deploy:prod": "dotenv -e .env.prod -- serverless deploy --stage prod --region us-east-1",
    "deploy:dev": "dotenv -e .env.dev -- serverless deploy --stage dev --region us-east-1",
    "print:dev": "dotenv -e .env.dev -- serverless print --stage dev",
    "print:prod": "dotenv -e .env.prod -- serverless print --stage prod",
    "kill:offline": "lsof -ti :4000 | xargs -r kill -9; lsof -ti :3002 | xargs -r kill -9; pkill -f \"serverless offline\" || true"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.137",
    "@types/node": "^24.3.0",
    "serverless": "^3.39.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-esbuild": "^1.54.7",
    "serverless-offline": "^13.8.0",
    "typescript": "^5.6.3",
    "dotenv-cli": "^7.4.2"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.868.0",
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/lib-dynamodb": "^3.868.0"
  }
}